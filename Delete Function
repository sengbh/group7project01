deleteRecord () {
#deletes a record from database.txt
        echo "---------------"
        echo "Remove a record"
        echo "---------------"
        read -p "Enter a name to delete: " name

        if grep -i $name $data
        then
                grep -v "$name" $data > temp && mv temp ${data}
                echo "$name was removed from the file"
        else
                echo "$name does not exist"
        fi

}
